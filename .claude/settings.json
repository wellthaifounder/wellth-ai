{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write \"$CLAUDE_FILE_PATH\" 2>/dev/null || true"
          }
        ]
      }
    ],
    "PreCommit": [
      {
        "type": "command",
        "command": "npm run build"
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm run build:*)",
      "Bash(npm run dev:*)",
      "Bash(npm run test:*)",
      "Bash(npm run lint:*)",
      "Bash(npx prettier:*)",
      "Bash(npx tsc:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git checkout:*)",
      "Bash(git switch:*)",
      "Bash(gh pr:*)",
      "Bash(gh issue:*)",
      "Bash(npx supabase:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(wc:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(echo:*)",
      "Bash(test:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(curl:*)",
      "Bash(node:*)",
      "Bash(deno:*)",
      "Bash(vercel:*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(*SUPABASE_SERVICE_ROLE*)",
      "Bash(*--force*)",
      "Bash(*secret*)",
      "Bash(*password*)"
    ]
  },
  "model": "opus",
  "planMode": {
    "enableByDefault": false,
    "requireForComplexTasks": true
  }
}
